@page
@model Flora.Pages.HomeModel
@{
    ViewData["Title"] = "Welcome to Flora";
}

<header class="hero">
    <h1>Welcome to Flora</h1>
    <p>Your one-stop shop for beautiful flower bouquets and arrangements.</p>
    <a href="/Shopping" class="cta-button">Browse Products</a>
</header>

<main>
    <!-- Categories Section -->
    <section class="categories">
        <div class="category">
            <a href="/Shopping?SearchString=Roses">
                <img src="~/Images/roses.jpg" alt="Roses">
            </a>
            <h3>Roses</h3>
            <p>Elegant and timeless roses for every occasion.</p>
        </div>
        <div class="category">
            <a href="/Shopping?SearchString=Tulips">
                <img src="~/Images/tulips.jpg" alt="Tulips">
            </a>
            <h3>Tulips</h3>
            <p>Vibrant tulips to brighten anyone's day.</p>
        </div>
        <div class="category">
            <a href="/Shopping?SearchString=Lilies">
                <img src="~/Images/lilies.jpg" alt="Lilies">
            </a>
            <h3>Lilies</h3>
            <p>Delicate lilies for moments of celebration.</p>
        </div>
    </section>
</main>

