@page
@model Flora.Pages.faqsModel
@{
	ViewData["Title"] = "FAQs";
}

<main>
    <h1>Frequently Asked Questions (FAQs)</h1>
    <section class="faq-section">
        <div class="faq-item">
            <h3 class="question">How do I place an order?</h3>
            <p class="answer">Simply browse our products, add them to your cart, and proceed to checkout.</p>
        </div>
        <div class="faq-item">
            <h3 class="question">What payment methods do you accept?</h3>
            <p class="answer">We accept credit cards, debit cards, and online payment systems.</p>
        </div>
        <div class="faq-item">
            <h3 class="question">How long does delivery take?</h3>
            <p class="answer">Delivery typically takes 2-5 business days, depending on your location.</p>
        </div>
    </section>
</main>

