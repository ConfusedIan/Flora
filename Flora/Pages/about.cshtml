@page
@model Flora.Pages.aboutModel
@{
    ViewData["Title"] = "About Us";
}
<h1>About Us</h1>
<section class="about">
    <p>
        Welcome to Flower Delivery, your one-stop shop for fresh, beautiful flowers for every occasion.
        Our mission is to bring joy and beauty into people's lives through stunning floral arrangements
        and exceptional customer service.
    </p>
    <p>
        Founded in 2024, Flower Delivery has quickly grown to become a trusted name in the industry.
        We pride ourselves on offering high-quality bouquets, potted plants, and seasonal flowers, all
        sourced from local growers who share our passion for sustainability and quality.
    </p>
</section>

<!-- Feedback Form -->
<section class="feedback-form-section">
    <h2>Share Your Feedback</h2>
    <p>Your opinions help us improve and serve you better.</p>
    <form id="feedbackForm" action="https://api.web3forms.com/submit" method="POST" class="feedback-form">
        <input type="hidden" name="access_key" value="b29a73cf-d556-4160-8997-daabf0926ea5">
        <input type="hidden" name="subject" value="Feedback from About Us Page">
        <input type="hidden" name="redirect" value="https://yourdomain.com/thank-you">

        <label for="name">Your Name:</label>
        <input type="text" id="name" name="name" placeholder="Enter your name">

        <label for="email">Your Email:</label>
        <input type="email" id="email" name="email" placeholder="Enter your email">

        <label for="message">Your Feedback:</label>
        <textarea id="message" name="message" rows="5" placeholder="Write your feedback here..."></textarea>

        <!-- CAPTCHA Section -->
        <div>
            <label id="captchaQ" style="display: block; margin: 10px 0;"></label>
            <input type="text" id="captchaInput" placeholder="Enter your answer" />
        </div>

        <button type="submit" class="submit-button">Submit Feedback</button>
    </form>
</section>

@section Scripts {
    <script src="~/js/contactValidation.js"></script>
}
