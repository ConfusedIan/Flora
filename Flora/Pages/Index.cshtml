@page
@model IndexModel
@{
    ViewData["Title"] = "Login";
}

<h3>Login Form</h3>
@Model.Msg

<form method="post" asp-page="Index">
    <table>
        <tr>
            <td>Username</td>
            <td><input type="text" asp-for="@Model.formUsername" /></td>
        </tr>
        <tr>
            <td>Password</td>
            <td>
                <input type="password" asp-for="@Model.formPassword" />
            </td>
        </tr>
        <tr>
            <td> <input type="submit" value="Login" /> </td>
        </tr>
    </table>
</form>

<p>
    Don't have an account? <a asp-page="Register">Register here</a>.
</p>
