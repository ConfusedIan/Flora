@page
@model Flora.Pages.IndexModel
@{
    ViewData["Title"] = "Login";
}

<main class="login-page">
    <h1 class="login-title">Login</h1>
    <div class="login-container">
        <!-- Display error message if login fails -->
        @if (!string.IsNullOrEmpty(Model.Msg))
        {
            <div class="error-message">@Model.Msg</div>
        }

        <!-- Login form -->
        <form class="login-form" method="post">
            <label for="formUsername">Username</label>
            <input type="text" id="formUsername" name="formUsername" placeholder="Enter your username" value="@Model.formUsername" required />

            <label for="formPassword">Password</label>
            <div class="password-container">
                <input type="password" id="formPassword" name="formPassword" placeholder="Enter your password" required />
                <a href="/register" class="create-account-link">Don't have an account?</a>
            </div>

            <button type="submit" class="login-button">Sign In</button>
        </form>
    </div>
</main>


