<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Flora</title>
    <!-- Bootstrap and Site CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Flora.styles.css" asp-append-version="true" />
    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/custom-navbar.css" asp-append-version="true" />
    <style>
        .navbar {
            display: flex;
            justify-content: space-between;
            align-items: center;
            background-color: #ffffff;
            padding: 0.5em 2em;
            box-shadow: rgba(0, 0, 0, 0.1) 0px 6px 12px;
            border: none;
            width: 100%;
            position: fixed;
            top: 0;
            z-index: 1000;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar">
            <a class="brand" asp-area="" asp-page="/Home">
                <img src="~/Assets/flora-logo.jpg" alt="Flora Logo" />
            </a>
            <ul>
                <li><a class="@(ViewData["Title"] == "Home" ? "active" : "")" asp-area="" asp-page="/Home">Home</a></li>
                <li><a class="@(ViewData["Title"] == "Shopping" ? "active" : "")" asp-area="" asp-page="/Shopping">Shopping</a></li>
                <li><a class="@(ViewData["Title"] == "About Us" ? "active" : "")" asp-area="" asp-page="/about">About Us</a></li>
                <li><a class="@(ViewData["Title"] == "Contact Us" ? "active" : "")" asp-area="" asp-page="/contact">Contact Us</a></li>
                <li><a class="@(ViewData["Title"] == "FAQs" ? "active" : "")" asp-area="" asp-page="/faqs">FAQs</a></li>
                <li><a class="@(ViewData["Title"] == "Return Policy" ? "active" : "")" asp-area="" asp-page="/return-policy">Return Policy</a></li>
                <li>
                    <a class="@(ViewData["Title"] == "Login" ? "active" : "")" asp-area="" asp-page="/Index">
                        <img src="~/Assets/login-icon.png" alt="Login" style="width: 24px; height: 24px;" />
                    </a>
                </li>
                <li>
                    <a class="@(ViewData["Title"] == "Cart" ? "active" : "")" asp-area="" asp-page="/Cart">
                        <img src="~/Assets/cart-icon.webp" alt="Cart" style="width: 24px; height: 16px;" />
                    </a>
                </li>
            </ul>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
